networks:
  default:
    external:
      name: nat
services:
  khachhang.api:
    build:
      context: P:\QuanLiDoChoi
      dockerfile: khachhang.api\Dockerfile
    depends_on:
    - sql.data
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ConnectionString: Server=sql.data;Initial Catalog=QL_TaiKhoan;User Id=sa;Password=Password1
    image: khachhangapi
    ports:
    - published: 8001
      target: 80
    - target: 80
    restart: on-failure
  quanlidochoi:
    build:
      context: P:\QuanLiDoChoi
      dockerfile: QuanLiDoChoi\Dockerfile
    depends_on:
    - khachhang.api
    - sanpham.api
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      KhachHangUrl: http://khachhang.api
      SanPhamUrl: http://sanpham.api
    image: quanlidochoi
    ports:
    - published: 8000
      target: 80
    - target: 80
    restart: on-failure
  sanpham.api:
    build:
      context: P:\QuanLiDoChoi
      dockerfile: sanpham.api\Dockerfile
    depends_on:
    - sql.data
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ConnectionString: Server=sql.data;Initial Catalog=QL_SanPham;User Id=sa;Password=Password1
    image: sanphamapi
    ports:
    - published: 8002
      target: 80
    - target: 80
    restart: on-failure
  sql.data:
    environment:
      ACCEPT_EULA: "Y"
      SA_PASSWORD: Password1
    image: microsoft/mssql-server-windows-express
    ports:
    - published: 1433
      target: 1433
version: '3.4'