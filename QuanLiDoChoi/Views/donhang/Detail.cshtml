@model IEnumerable<donhang.api.Models.Chitietdonhang>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
</br>
@{
    var flag = true;
    foreach (var item in Model)
    {
        if (flag)
        {
            <h2>Chi tiết: </h2>
            <h3><b>Đơn Hàng  @item.MaDh</b></h3>
            flag = false;
        }
    }
}


<table class="table table-striped table-bordered table-hover" id="dataTables-example">
    <thead>
        <tr style="text-align:center">
            <th>
                Mã Sản Phẩm
            </th>
            <th>
                Số Lượng
            </th>
            <th>
                Thành Tiền
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            ViewBag.getMaDH = item.MaDh;
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaSp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoLuong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ThanhTien)
                </td>

            </tr>
        }
    </tbody>
</table>


<div>
    <button class="btn btn-success" onclick="notify('@ViewBag.getMaDH');return false;"><b>Thanh Toán</b></button>&nbsp&nbsp&nbsp&nbsp
</div>

<script type="text/javascript">
    function notify(id) {
        var con = confirm("Bạn xác nhận đã đơn hàng đã được thanh toán?");
        if (con == true) {
            location.href = '/DonHang/ThanhToan/' + id;
        }
    }
</script>
