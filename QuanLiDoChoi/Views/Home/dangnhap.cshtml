<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
            <form asp-action="dangnhap" class="login100-form validate-form flex-sb flex-w">
                <span class="login100-form-title p-b-32" style="color: #ff6600; text-align: center; font-weight: bold;">
                    Đăng nhập
                </span>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <span class="txt1 p-b-11">
                    Tên tài khoản
                </span>
                <div class="wrap-input100 validate-input m-b-36">
                    <input asp-for="TaiKhoan1" class="form-control" />
                    <span asp-validation-for="TaiKhoan1" class="text-danger"></span>
                </div>


                <span class="txt1 p-b-11">
                    Mật khẩu
                </span>
                <div class="wrap-input100 validate-input m-b-12" data-validate="Password is required">
                    <span class="btn-show-pass">
                        <i class="fa fa-eye"></i>
                    </span>
                    <input asp-for="MatKhau" class="form-control" type="password" />
                    <span asp-validation-for="MatKhau" class="text-danger"></span>
                </div>
                <div class="container-login100-form-btn" style="padding-top: 30px;">
                    <button type="submit" class="login100-form-btn">
                        Đăng nhập
                    </button>
                </div>
            </form>
        </div>

    </div>
</div>

