@model List<QuanLiDoChoi.Models.CartItem>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var dem = 0;
    float tongtien = 0;
}


<!-- //banner-2 -->
<!-- page -->
<div class="services-breadcrumb">
    <div class="agile_inner_breadcrumb">
        <div class="container">
            <ul class="w3_short">
                <li>
                    <a href="/Home/Index">Trang chủ</a>
                    <i>|</i>
                </li>
                <li>Kiểm tra</li>
            </ul>
        </div>
    </div>
</div>
@Html.ValidationMessage("LoiSoLuong")

@if (Model != null)
{
    <!-- //page -->
    <!-- checkout page -->
    <div class="privacy">
        <div class="container">
            <div class="checkout-right">
                <h4>
                    Đơn hàng của bạn gồm :
                    <span>@Model.Count() sản phẩm</span>
                </h4>
                <div class="table-responsive">
                    <table class="timetable_sub">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Sản phẩm</th>
                                <th>Số lượng</th>
                                <th>Tên sản phẩm</th>

                                <th>Giá</th>
                                <th>Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var sp in Model)
                            {
                                dem++;
                                var rem = "rem" + @dem;
                                var close = "close" + @dem;
                                float tien = (float)sp.SP.GiaBanLe * sp.SoLuong;
                                tongtien = tongtien + tien;
                                <tr class="@rem">
                                    <td class="invert">@dem</td>
                                    <td class="invert-image">
                                        <a href="single2.html">
                                            <img src="@sp.SP.Hinhanhindex" alt=" " class="img-responsive">
                                        </a>
                                    </td>
                                    <td class="invert">
                                        @sp.SoLuong
                                    </td>
                                    <td class="invert">@sp.SP.TenSp/td>
                                    <td class="invert">@sp.SP.GiaBanLe.ToString() VNĐ</td>
                                    <td class="invert">@tien.ToString("N0") VNĐ</td>                                   
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>

            <div style="margin-top:10px;">
                <button class="btn btn-default" onclick="notify();return false;">Quay Lại</button>
            </div>


            <h1 style="text-align:right"> Tổng tiền: @tongtien.ToString("N0") VNĐ</h1>

        </div>
    </div>
}
<script src="~/Assets/js/controller/cartController.js"></script>

<script>
    function notify() {
        location.href = '/Home/DonHang/';
    }
</script>

